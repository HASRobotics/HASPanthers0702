// Create (Roomba) Pseudocode

//Defining Variables:
int arm = 0;

//Main Code:
#include <kipr/botball.h>

int main()
{
//start by waking up the create
create_connect();
//move forward (integers rep speed of right and left motor)
create_drive_direct(100, 100);
//stop it from moving
create_stop();

//turn right
set_create_total_angle(90);
//turn create so that the robot is facing the cubes

//move the create backwards so that the cube falls down
create_drive_direct(-100, -100);

//turn right 
set_create_total_angle(90); 
create_drive_direct(20, 20); 
//fix angle 

//code for lowering the mechanism 
while () {
//move forward towards the next tower
//now we want to lift the arm up

}

create_disconnect();
return 0;
}
